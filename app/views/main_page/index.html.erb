          <tr>
            <td>Всего XML в базе</td>
            <td><%= Xml.all.count%></td>
          </tr>
          <tr>
            <td>Количество Simple Tests</td>
            <td><%= SimpleTest.all.count%></td>
          </tr>
          <tr>
            <td>Всего пользователей</td>
            <td><%= User.all.count%></td>
          </tr>
          <tr>
            <td>Последний зарегистрированный</td>
            <td><%= User.all.order(created_at: :desc).first.email %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

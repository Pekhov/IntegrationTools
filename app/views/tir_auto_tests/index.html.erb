<% provide(:title, "TIR AutoTests") %>
<div class="col">
  <div class="row">
    <div class="col-md-4 placeholder">

    </div>
    <div class="col-md placeholder">

    </div>
    <div class="col-md-3 placeholder" id="select_product">
      <%= simple_form_for :test_data, remote: 'true', url: tir_auto_tests_run_path, html: {class: 'form-group' } do |f| %>
        <%= f.input :tir_version, label: 'Выберите версию платформы:', selected: 'ТИР 2.2', collection: ['ТИР 2.2', 'ТИР 2.3'], required: false %>
        <div id="tir_22">
          <%= f.input :functional_tir22, label: 'Выберите проверки', collection: ['Проверка адаптера БД', 'Проверка адаптера Active MQ'], include_hidden: false, required: false, input_html: { multiple: true} %>
        </div>
        <div id="tir_23" style="display:none">
          <%= f.input :functional_tir23, label: 'Выберите проверки', collection: ['Проверка адаптера БД', 'Проверка адаптера Active MQ'], include_hidden: false, required: false, input_html: { multiple: true} %>
        </div>
      <%= f.button :submit, 'Запустить', class: 'btn-primary'%>
      <%end%>
    </div>
  </div>
</div>
<%= render 'layouts/modal_xml_sender' %>
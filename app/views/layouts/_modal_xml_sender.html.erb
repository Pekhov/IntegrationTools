<!-- Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="messageModalLabel">Внимание!</h5>
      </div>
      <div class="modal-body">
        <a id="modal-text"></a><br/>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="modal-close-button" onclick="closeTimer()">Отменить</button>
        <button type="button2" class="btn btn-primary" id="modal-close-button2" onclick="$('#messageModal').modal('hide')">Закрыть</button>
      </div>
      <script>
        function closeTimer() {
            clearTimeout(timerId);
            clearTimeout(modalTimer);
            $('#modal-close-button').hide();
            $('#modal-close-button2').show();
        }
      </script>
    </div>
  </div>
</div>